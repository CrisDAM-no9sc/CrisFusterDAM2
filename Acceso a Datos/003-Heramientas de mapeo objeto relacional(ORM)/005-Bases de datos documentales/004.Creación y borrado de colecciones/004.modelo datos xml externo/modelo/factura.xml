<?xml version="1.0" encoding="UTF-8"?>
<form>
    <!-- Campos Estáticos -->
    <fields>
        <field>
            <name>nombreCliente</name>
            <type>text</type>
            <placeholder>Nombre del cliente</placeholder>
            <required>true</required>
        </field>
        <field>
            <name>emailCliente</name>
            <type>email</type>
            <placeholder>Correo electrónico</placeholder>
            <required>true</required>
        </field>
        <field>
            <name>telefonoCliente</name>
            <type>tel</type>
            <placeholder>Teléfono del cliente</placeholder>
            <required>false</required>
        </field>
    </fields>

    <!-- Campos Dinámicos: Líneas de Factura -->
    <dynamicFields>
        <fieldGroup name="lineafactura">
            <field>
                <name>descripcion</name>
                <type>text</type>
                <placeholder>Descripción</placeholder>
                <required>true</required>
            </field>
            <field>
                <name>cantidad</name>
                <type>number</type>
                <placeholder>Cantidad</placeholder>
                <required>true</required>
            </field>
            <field>
                <name>precio</name>
                <type>number</type>
                <placeholder>Precio</placeholder>
                <required>true</required>
            </field>
        </fieldGroup>
    </dynamicFields>
</form>
